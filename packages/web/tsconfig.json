{
  "extends": "@peragus/configs/ts/react-library.json",
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "@peragus/shared": ["../shared/src"],
      "@peragus/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
