{
  "name": "@peragus/mcp-server",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "peragus-mcp-server": "./dist/cli.mjs"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "start": "node dist/index.mjs",
    "dev": "vite-node -w src/cli.mts",
    "test": "vitest",
    "prebuild": "rm -rf ./dist",
    "build": "tsc",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "depcheck": "depcheck",
    "prepublishOnly": "tsc",
    "preversion": "vitest run && pnpm run build",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.3.0",
    "@srcbook/api": "workspace:^",
    "@srcbook/shared": "workspace:^",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "depcheck": "^1.4.7",
    "typescript": "^5.0.0",
    "vite": "^5.4.4",
    "vite-node": "^2.0.5",
    "vitest": "^2.0.5"
  }
}