{
  "name": "peragus",
  "version": "0.1.0",
  "description": "AI-enhanced TypeScript notebook platform for productive development",
  "type": "module",
  "bin": {
    "peragus-app": "./dist/bin/cli.mjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peragus-dev/peragus-app.git"
  },
  "homepage": "https://github.com/peragus-dev/peragus-app",
  "author": "glassBead",
  "license": "Apache-2.0",
  "keywords": [
    "typescript",
    "notebook",
    "javascript",
    "ai",
    "development",
    "coding",
    "programming",
    "interactive",
    "mcp",
    "model-context-protocol"
  ],
  "scripts": {
    "start": "node ./dist/bin/cli.mjs start",
    "depcheck": "depcheck",
    "prebuild": "rm -rf ./dist",
    "build": "tsc",
    "lint": "eslint . --max-warnings 0",
    "prepublishOnly": "pnpm run --workspace-root build",
    "preversion": "pnpm run build",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "catalog:",
    "@ai-sdk/openai": "catalog:",
    "@srcbook/api": "workspace:^",
    "@srcbook/shared": "workspace:^",
    "ai": "^3.3.33",
    "better-sqlite3": "^11.3.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "depcheck": "^1.4.7",
    "drizzle-orm": "^0.33.0",
    "express": "^4.20.0",
    "marked": "catalog:",
    "open": "^10.1.0",
    "posthog-node": "^4.2.0",
    "ws": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
