{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "../../..",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "../../..",
    "paths": {
      "@srcbook/*": ["packages/*"]
    }
  },
  "include": [
    "docs/web-app-generator/testing/**/*.ts",
    "packages/**/*.mts"
  ],
  "references": [
    { "path": "../../../packages/shared" },
    { "path": "../../../packages/api" }
  ],
  "exclude": ["node_modules"]
}
